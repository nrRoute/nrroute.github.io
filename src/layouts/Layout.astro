---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="author" content="nrRoute" />
		<meta name="description" content="nrRoute's Page" />
		<meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<meta name="og:title" content={title} />
		<meta name="og:description" content="nrRoute's Page" />
		<meta name="twitter:card" content="summary" />
		<meta name="twitter:site" content="@nrRoute" />
		<meta name="twitter:creator" content="@nrRoute" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content="nrRoute's Page" />
		<title>{title}</title>
	</head>
	<body class="flex flex-col min-h-screen font-sans bg-[#e9e7e7] dark:bg-[#313030] dark:text-gray-50">
		<div class="grow">
			<slot />
		</div>
		<footer class="flex justify-center pt-5 bg-[#2b2727] h-20 text-gray-200">
			Copyright &copy; nrRoute All Rights Reserved.
		</footer>
	</body>
</html>
