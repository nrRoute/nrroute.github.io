<article id="post">
  <slot />
</article>

<style is:global>

  #post {
    max-width: 100%;
    margin-left: auto;
    margin-right: auto;

    & h1 {
      font-size: 1.75rem;
      line-height: 2.25rem;
      margin-top: 1.25rem;
      margin-bottom: 1.25rem;
      border-bottom-width: 2px;
      border-bottom-color: currentColor;
    }

    & h2 {
      font-size: 1.5rem;
      line-height: 2rem;
      margin-top: 1.25rem;
      margin-bottom: 1rem;
      border-bottom-width: 1px;
      border-bottom-color: currentColor;
    }

    & h3 {
      font-size: 1.25rem;
      line-height: 1.75rem;
      margin-top: 1.25rem;
      margin-bottom: 0.75rem;
    }

    & p {
      line-height: 1.75rem;
      margin-top: 1rem;
      margin-bottom: 1rem;
    }

    & ul {
      margin-top: 0.5rem;
      margin-bottom: 0;
      padding-left: 1.5rem;
      list-style-position: outside;
      list-style-type: disc;
    }

    & li {
      margin-top: 0;
      margin-bottom: 0.5rem;
    }

    & sup {
      font-size: 0.8rem;
      line-height: 1rem;
    }

    & blockquote {
      padding-left: 1rem;
      border-left-width: 2px;
      border-left-color: currentColor;
    }
  }

  @media (max-width: 768px) {
    #post {
      & h1 {
        font-size: 1.5rem;
        margin-top: 1rem;
        margin-bottom: 1rem;
      }

      & h2 {
        font-size: 1.25rem;
        margin-top: 1rem;
        margin-bottom: 1rem;
      }

      & h3 {
        font-size: 1rem;
        margin-top: 1rem;
        margin-bottom: 0.75rem;
      }
    }
  }

  .rlc-container {
    width: 100%;
    max-height: 100px;
    margin: 0 auto 1rem;

    color: var(--fg);
    text-decoration: none;

    border: 2px solid var(--fg);
    border-radius: 0.5rem;
    display: flex;
    align-items: stretch;

    &:hover {
      background-color: var(--fg15);

      color: var(--fg);
      text-decoration: none;
    }

    & > span {
      display: none;
    }
  }

  .rlc-info {
    overflow: hidden;
    padding: 1rem;
    flex: 4 1 100px;
    text-align: left;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .rlc-title {
    font-size: 1rem;
    font-weight: bold;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .rlc-description {
    font-size: 0.875rem;
    color: var(--fg75);
    overflow: hidden;
    line-height:1rem;
    height: 1rem;
  }

  .rlc-url-container {
    display: flex;
    align-items: center;
  }

  .rlc-favicon {
    margin-right: 4px;
    width: 14px;
    height: 14px;
  }

  .rlc-url {
    font-size: 0.875rem;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
  }

  .rlc-image-container {
    position: relative;
    flex: 1 1 100px;
  }

  .rlc-image {
    object-fit: cover;
    width: 100%;
    height: 100%;
    border-bottom-right-radius: 0.5rem;
    border-top-right-radius: 0.5rem;
  }
</style>
